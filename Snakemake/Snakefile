rule all:
	input:
		'/Users/Lusine/Documents/Masterarbeit/Code/MA/parSMURF/Mendelian/predictions_test.txt'


FILES = ['features','folds','labels']

rule get_features:
	input:
		'Mendelian.txt'
	output:
		expand("{file}.txt", file=FILES)

	shell:
		"""
		cut -d$'\t' -f 1-26 < {input} > {output[0]};
		cut -f27 < {input} > {output[1]};
		cut -f28 < {input} > {output[2]}

		"""





rule make_parSMURF_wird_nicht_benutzt:
	input:
	output: 		
	shell:
		"""
		cd /Users/Lusine/Documents/Masterarbeit/Code/MA/parSMURF/;
		mkdir build;
		cd build;
		cmake ../src;
		make -j 4
		"""
	


rule run_parSMURF:
	input:
		expand("{file}.txt", file=FILES)


	output: 		
			'predictions_test.txt'
	shell:
		"""
		dir="/Users/Lusine/Documents/Masterarbeit/Code/MA/";
	
		cd $dir$"parSMURF/build";
		./parSMURF1 --cfg ../cfgEx/dataFromFile_test.json  ;

		cd $dir$"parSMURF/Mendelian";
		'predictions_test.txt' > {output} 

		"""
	
		